@inherits LayoutComponentBase

<PageTitle>BorderlessStores</PageTitle>
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.TwoTone.ShoppingCart" Color="Color.Inherit" Href="/shoppingCart"/>
        <MudLink Color="Color.Inherit" Href="/">Login</MudLink>
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
       @Body
    </MudMainContent>
</MudLayout>

@code{
    bool open;

    void ToggleDrawer()
    {
        open = !open;
    }

}